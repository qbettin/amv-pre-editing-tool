{
  "name": "amv-pre-editing-tool",
  "version": "2.0.0",
  "description": "Prepare AMV clips by removing dead frames and upscaling",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build:vite": "vue-tsc && vite build",
    "build:python": "cd python && pyinstaller build.spec",
    "build:setup": "node build-setup.js",
    "build:app": "npm run build:vite && electron-builder",
    "build": "npm run build:setup && npm run build:app",
    "release": "npm run build"
  },
  "keywords": [
    "amv",
    "video",
    "editor",
    "anime",
    "edit",
    "tool",
    "dead",
    "frame"
  ],
  "author": "Quinten Bettin",
  "license": "MIT",
  "devDependencies": {
    "@electron/rebuild": "^3.3.0",
    "@types/node": "^20.11.0",
    "@vitejs/plugin-vue": "^5.2.4",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "fs-extra": "^11.1.1",
    "typescript": "^5.9.3",
    "vite": "^6.4.1",
    "vite-plugin-electron": "^0.29.0",
    "vue-tsc": "^3.1.8"
  },
  "dependencies": {
    "@mdi/font": "^7.4.47",
    "pinia": "^3.0.4",
    "vue": "^3.5.25",
    "vuetify": "^3.11.3"
  },
  "build": {
    "appId": "com.amvpreeditingtool.app",
    "productName": "AMV Pre-Editing Tool",
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "extraResources": [
      {
        "from": "resources/",
        "to": "resources/",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "publish": {
      "provider": "github",
      "owner": "qbettin",
      "repo": "amv-pre-editing-tool"
    }
  }
}