{
  "name": "amv-pre-editing-tool",
  "version": "1.0.0",
  "description": "Prepare AMV clips by removing dead frames and upscaling",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "build:python": "cd python && pyinstaller build.spec",
    "build:setup": "node build-setup.js",
    "build:app": "electron-builder",
    "build": "npm run build:setup && npm run build:app",
    "release": "npm run build && npm run upload-release"
  },
  "keywords": ["amv", "video", "editor", "anime", "edit", "tool", "dead", "frame"],
  "author": "Quinten Bettin",
  "license": "MIT",
  "devDependencies": {
    "@electron/rebuild": "^3.3.0",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "fs-extra": "^11.1.1"
  },
  "build": {
    "appId": "com.amvpreeditingtool.app",
    "productName": "AMV Pre-Editing Tool",
    "files": [
      "src/**/*",
      "!python/**/*",
      "!resources/python-dist/**/*"
    ],
    "extraResources": [
      {
        "from": "resources/",
        "to": "resources/",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "publish": {
      "provider": "github",
      "owner": "qbettin",
      "repo": "amv-pre-editing-tool"
    }
  }
}